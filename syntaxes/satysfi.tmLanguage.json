{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SATySFi",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "module"
		},
		{
			"include": "#inline"
		},
		{
			"include": "#block"
		},
		{
			"include": "#meta"
		},
		{
			"include": "variable"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#string"
		},
		{
			"include": "raw"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.other.satysfi",
				"match": "\\b(document|let\\-?[a-zA-Z]*|in|match|with|fun)\\b"
			}]
		},
		"module": {
			"patterns": [{
				"name": "entity.name.class.satysfi",
				"match": "[A-Z][a-zA-Z0-9]*(?=\\.[a-z][a-zA-Z0-9]*)"
			}]
		},
		"inline": {
			"patterns": [{
				"name": "entity.name.function",
				"match": "\\\\\\w+\\-?\\w*(?=\\W)"
			}]
		},
		"block": {
			"patterns": [{
				"name": "entity.name.class.satysfi",
				"match": "\\+\\w+\\-?\\w*\\s?(?=[\\(\\<\\[\\{])"
			}]
		},
		"meta": {
			"patterns": [{
				"name": "meta.preprocessor.satysfi",
				"match": "\\@\\b(require|import)\\b"
			}]
		},
		"variable": {
			"patterns": [{
				"name": "variable.other",
				"match": "(?<=let\\-?[a-zA-Z]*\\s+)[a-zA-Z0-9]+(?=\\=)"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.satysfi",
				"match": "%.*"
			}]
		},
		"string": {
			"patterns": [
				{
					"name": "string.quoted.single.satysfi",
					"match": "(?<!``)`[^`]+`(?!``)"
				}
			]
		},
		"raw": {
			"patterns": [
				{
					"name": "markup.raw.satysfi",
					"begin": "(?<=\\()```",
					"end": "```(?=\\);"
				}
			]
		}
	},
	"scopeName": "text.saty"
}