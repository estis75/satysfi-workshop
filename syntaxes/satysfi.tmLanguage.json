{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SATySFi",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#string"
		},
		{
			"include": "markup"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.satysfi",
				"match": "(?<!\\\\\\\\)\\b(document|[\\+\\\\]\\w+\\-?\\w*\\s?(?=[\\{\\(\\[;]))\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.satysfi",
				"match": "%.*"
			}]
		},
		"string": {
			"patterns": [
				{
					"name": "string.quoted.single",
					"match": "(?<!``)`[^`]+`(?!``)"
				}
			]
		},
		"markup": {
			"patterns": [
				{
					"name": "markup.raw",
					"match": "(?<=\\()```[.]+```(?=\\);)"
				}
			]
		}
	},
	"scopeName": "text.saty"
}