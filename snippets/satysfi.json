{
    "document": {
        "prefix": "document",
        "body": [
            "document (|",
            "  title = {${1}};",
            "  author = {${2}};",
            "  show-title = ${3:true};",
            "  show-toc = ${4:true};",
            "|) '<",
            "  ${5}",
            ">"
        ]
    },
    "section": [
        {
            "prefix": "+section",
            "body": [
                "+section{${1}} <",
                "  ${2}",
                ">"
            ]
        }
    ],
    "subsection": {
        "prefix": "+subsection",
        "body": [
            "+subsection{${1}} <",
            "  ${2}",
            ">"
        ]
    },
    "paragraph": [
        {
            "prefix": "+p",
            "body": [
                "+p {",
                "  ${1}",
                "}"
            ],
            "description": "+p {}"
        },
        {
            "prefix": "+p",
            "body": [
                "+p (",
                "  ${1}",
                "  {",
                "    ${2}",
                "  }",
                ");"
            ],
            "description": "+p ({});"
        }
    ],
    "math": [
        {
            "prefix": "+math",
            "body": [
                "+math (\\${",
                "  ${2}",
                "});"
            ],
            "description": "+math (\\n{}\\n);"
        },
        {
            "prefix": "+math",
            "body": [
                "+math (",
                "  ${1}",
                "  \\${",
                "    ${2}",
                "  }",
                ");"
            ],
            "description": "+math (\\n{}\\n);"
        }
    ],
    "let": [
        {
            "prefix": "let",
            "body": [
                "let ${1} = ${2} in"
            ]
        },
        {
            "prefix": "let-",
            "body": [
                "let-${1} ${2} = ${3} in"
            ]
        }
    ],
    "meta": [
        {
            "prefix": "@require",
            "body": [
                "@require: ${1}"
            ]
        },
        {
            "prefix": "@import",
            "body": [
                "@import: ${1}"
            ]
        }
    ]
}