{
    "document": {
        "prefix": "document",
        "body": [
            "document (|",
            "  title = {${1}};",
            "  author = {${2}};",
            "  show-title = ${3:true};",
            "  show-toc = ${4:true};",
            "|) '<",
            "  ${5}",
            ">"
        ]
    },
    "section": [
        {
            "prefix": "+section",
            "body": [
                "+section{${1}} <",
                "  ${2}",
                ">"
            ]
        }
    ],
    "subsection": {
        "prefix": "+subsection",
        "body": [
            "+subsection{${1}} <",
            "  ${2}",
            ">"
        ]
    },
    "paragraph": [
        {
            "prefix": "+p",
            "body": [
                "+p {",
                "  ${1}",
                "}"
            ]
        },
        {
            "prefix": "+p(",
            "body": [
                "+p (",
                "  ${1}",
                "  {",
                "    ${2}",
                "  }",
                ");"
            ]
        }
    ],
    "math": [
        {
            "prefix": "+math",
            "body": [
                "+math (\\${",
                "  ${2}",
                "});"
            ]
        },
        {
            "prefix": "+math(",
            "body": [
                "+math (",
                "  ${1}",
                "  \\${",
                "    ${2}",
                "  }",
                ");"
            ]
        }
    ],
    "let": {
        "prefix": "let",
        "body": [
            "let ${1} = ${2} in"
        ]
    },
    "let-": {
        "prefix": "let-",
        "body": [
            "let-${1} ${2} = ${3} in"
        ]
    },
    "require": {
        "prefix": "@require",
        "body": [
            "@require: ${1}"
        ]
    },
    "import": {
        "prefix": "@import",
        "body": [
            "@import: ${1}"
        ]
    }
}